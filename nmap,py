def pause():
    console.print("\nPressione [bold cyan]ENTER[/bold cyan] para voltar ao menu...")
    input()

def show_definition_example(title, definition, example):
    show_banner()
    console.print(f"[bold cyan]----------- T√©cnica: [white]{title}[/white] -----------[/bold cyan]\n")
    console.print(f"[bold green]> Defini√ß√£o:[/bold green] {definition}\n")
    console.print(f"[bold green]> Exemplo:[/bold green] {example}\n")
    pause()

